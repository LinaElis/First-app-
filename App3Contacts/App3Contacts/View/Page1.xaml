<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3Contacts.Page1">

  <ContentPage.Content>
    <StackLayout Padding="30">
      <Label Text="Firstname:" FontSize="25" FontAttributes="Bold"></Label>
      <Label Text="{Binding FirstName}" FontSize="20"></Label>

      <Label Text="Lastname:" FontSize="25" FontAttributes="Bold"></Label>
      <Label Text="{Binding LastName}" FontSize="20"></Label>

      <Label Text="Email:" FontSize="25" FontAttributes="Bold"></Label>
      <Label Text="{Binding Email}" FontSize="20"></Label>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>