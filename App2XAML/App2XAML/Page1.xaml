<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2XAML.Page1">


  <ContentPage.content>
    <!--Skapa > Label knapp stepper-->
    <StackLayout>
      <Label x:Class="myLabel" Text="0"></Label>

      <Button x:Class="myButton" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Clicked="Button_OnClicked"></Button>

      <Stepper x:Class="myStepper" Minimum="1" Maximum="10" Value="1" Increment="1"></Stepper>
    </StackLayout>
  </ContentPage.content>

</ContentPage>